{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "ES2022",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveSymlinks": true,
        "declaration": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "outDir": "dist/",
        "lib": ["ES2019", "DOM"]
    },
    "include": ["source/**/*"]
}
